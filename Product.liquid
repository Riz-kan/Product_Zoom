            id="pdp-addToCartComponent"
            data-product-variant-media=""
            data-add-to-cart-animation="true">
            <button
              type="submit"
              ref="addToCartButton"
              class="atc-button"
              onclick="
                this.closest('add-to-cart-component').handleClick(event);
                this.closest('product-form-component').handleSubmit(event);
